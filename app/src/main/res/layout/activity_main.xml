<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Input Field"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <com.wwdablu.guidededittextext.GuidedEditTextExt
        android:id="@+id/text_input_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:guideAnimate="false"
        app:guideTextHideOnRuleSatisfied="false"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Input Field"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <com.wwdablu.guidededittextext.GuidedEditTextExt
        android:id="@+id/password_input_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:inputBackground="@drawable/rounded_corner"
        app:inputTextSize="8sp"
        app:inputType="password"

        app:guideAnimate="true"
        app:guideTextHideOnRuleSatisfied="true"
        app:guideTextSize="6sp"
        app:guideBackgroundImage="@drawable/guide_background_sample"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Input Field"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <com.wwdablu.guidededittextext.GuidedEditTextExt
        android:id="@+id/phone_input_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:inputBackground="@drawable/rounded_corner"
        app:inputTextSize="8sp"
        app:inputType="phone"

        app:guideAnimate="true"
        app:guideTextHideOnRuleSatisfied="true"
        app:guideTextSize="6sp"
        app:guideBackgroundImage="@drawable/guide_background_sample"
        />

</androidx.appcompat.widget.LinearLayoutCompat>